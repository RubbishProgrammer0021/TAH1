@model CommentViewModel

<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="UTF-8">
    <title> Post | The Academic Hub</title>
    <link rel="stylesheet" href="~/css/Homepage.css">
    <!-- Boxicons CDN Link -->
    <link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet'>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="./js/script.js"></script>
</head>


<body>
    <nav>
        <div class="navbar">
            <i class='bx bx-menu'></i>
            <div class="logo"><a href="#">The Academic Hub</a></div>
            <div class="nav-links">
                <div class="sidebar-logo">
                    <span class="logo-name">The Academic Hub</span>
                    <i class='bx bx-x'></i>
                </div>
                <ul class="links">
                    <li><a href="#">HOME</a></li>
                    <li>
                        <a href="#">Profile</a>
                    </li>
                </ul>
            </div>
            <div class="search-box">
                <i class='bx bx-search'></i>
                <div class="input-box">
                    <input type="text" placeholder="Search...">
                </div>
            </div>
        </div>
    </nav>



    <form method="post" action="/Homepage/Comment">

        <div class="form-group">
            <label for="CommentText">Comment:</label>
            <div>
                <input type="text" class="form-control" name="CommentPost" id="CommentPost" placeholder="Which post you want to comment">
            </div>
            <div>
                <input type="text" class="form-control" name="CommentText" id="CommentText" placeholder="Comment here">
            </div>
        </div>

        <button type="submit" class="btn btn-warning pull-right">SEND</button>
    </form>





</body>
</html>

